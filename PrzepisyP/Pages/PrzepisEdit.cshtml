@page
@model PrzepisyP.Pages.PrzepisEditModel
@{
}
<h2>Edytuj przepis</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="przepis.Nazwa" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="przepis.Nazwa" value="@Model.przepis.Nazwa" class="form-control">
                <span asp-validation-for="przepis.Nazwa"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="przepis.Opis" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="przepis.Opis" value="@Model.przepis.Opis" class="form-control">
                <span asp-validation-for="przepis.Opis"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input asp-for="przepis.Id" value="@Model.przepis.Id" type="hidden" />
                <input asp-for="przepis.Skladniki" value="@Model.przepis.Skladniki" type="hidden" />
                <button class="btn effect01">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>
