@page
@model PrzepisyP.Pages.PrzepisManageModel
<div class="container">
    <form class="form-horizontal" method="post" asp-page-handler="Szukaj">
        <br />Wyszukaj przepis<br />
        <div class="row">
            <div class="form-group">
                <label asp-for="wyszukajNazwaPrzepisu" class="control-label col-sm2">Nazwa przepisu</label>
                <div class="col">
                    <input asp-for="wyszukajNazwaPrzepisu" class="form-control">
                    <span asp-validation-for="wyszukajNazwaPrzepisu"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="wyszukajNazwaUzytkownika" class="control-label col-sm2">Nazwa uzytkownika</label>
                <div class="col">
                    <input asp-for="wyszukajNazwaUzytkownika" class="form-control">
                    <span asp-validation-for="wyszukajNazwaUzytkownika"></span>
                </div>
            </div>
        </div>
        <button class="btn effect01">Wyszukaj</button>
    </form>
    <br /><br />
    @if (User.Identity.IsAuthenticated)
    {
        <text><a asp-page="PrzepisCreate" class="btn effect01"><span>Dodaj Przepis</span></a></text>
    }
    
    <table class="table table-striped" style="margin-top:20px;">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => Model.przepisy[0].Id)</th>
                <th scope="col">@Html.DisplayNameFor(model => Model.przepisy[0].Nazwa)</th>
                <th scope="col">@Html.DisplayNameFor(model => Model.przepisy[0].Opis)</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.przepisy)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(m => p.Id)</th>
                    <td>@Html.DisplayFor(m => p.Nazwa)</td>
                    <td>@Html.DisplayFor(m => p.Opis)</td>
                    <td>
                        <a asp-page="PrzepisDetails" asp-route-id=@p.Id>Szczegóły</a> |
                        @if (User.Identity.Name == p.Uzytkownik)
                        {
                            <text>
                                <a asp-page="PrzepisEdit" asp-route-id=@p.Id>Edycja</a> |
                                <a asp-page="PrzepisDelete" asp-route-id=@p.Id>Usuń</a>
                            </text>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
