@page
@model PrzepisyP.Pages.PrzepisCreateModel
@{
}
<h2>Nowy Przepis</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="przepis.Nazwa" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="przepis.Nazwa" value="@Model.przepis.Nazwa" class="form-control">
                <span asp-validation-for="przepis.Nazwa"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="przepis.Opis" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="przepis.Opis" value="@Model.przepis.Opis" class="form-control">
                <span asp-validation-for="przepis.Opis"></span>
            </div>
        </div>
        <ol>
            @foreach (var item in Model.skladniki)
            {
                <text>
                    <li>@item</li>
                </text>
            }
        </ol>
        <div class="form-group">
            <label asp-for="skladnik" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="skladnik" class="form-control">
                <span asp-validation-for="skladnik"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn effect01">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>